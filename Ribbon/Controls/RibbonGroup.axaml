<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BusLab"
        x:Class="BusLab.RibbonGroup"
        x:DataType="local:RibbonGroup"
        mc:Ignorable="d"
        Background="Transparent"
        MinWidth="50">
    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="18"/>    
        </Grid.RowDefinitions>

        <ContentPresenter Grid.Row="0" Content="{Binding GroupContent}"/>

        <Border Grid.Row="1" Background="#404040" CornerRadius="5" Padding="2.5 0" Margin="0 0 0 2.5">
            <TextBlock FontSize="11" HorizontalAlignment="Center" Text="{Binding Title}" VerticalAlignment="Center"/>
        </Border>
    </Grid>

</UserControl>
