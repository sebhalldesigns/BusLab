<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Width="400" SizeToContent="Height"
        x:Class="BusLab.Windows.NewPopupWindow"
        SystemDecorations="None"
        FontFamily="avares://BusLab/Assets/Fonts#Iosevka Regular"
        Background="Transparent"
        CanResize="False"
        Title="New">

    <Border CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Padding="0" Background="{DynamicResource ThemeBackgroundBrush}">
        <StackPanel>
            <Grid>
                <TextBlock FontFamily="avares://BusLab/Assets/Fonts#Iosevka SemiBold" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 5">
                    New File
                </TextBlock>
                <Button HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" CornerRadius="5" Padding="5 2.5" Margin="5 5" Click="CancelPressed" IsCancel="True">
                    Cancel
                </Button>
            </Grid>
            <ListBox BorderBrush="Transparent" Background="Transparent" Padding="0" Margin="2.5" Name="TypeListBox" SelectionChanged="TypeSelectionChanged"/>
        </StackPanel>
    </Border>
    
</Window>
