<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BusLab"
        mc:Ignorable="d"
        d:DesignWidth="500" d:DesignHeight="350"
        x:Class="BusLab.NewCanDatabaseControl"
        x:DataType="local:NewCanDatabaseControl"
        FontFamily="avares://BusLab/Assets/Fonts#Iosevka Regular">
   
    <ScrollViewer>
        <StackPanel Spacing="10" Margin="10" Width="500" HorizontalAlignment="Center">

            <DockPanel>
                <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Width="150">
                    Color theme:
                </TextBlock>
                <ComboBox DockPanel.Dock="Right" Margin="10 0" CornerRadius="5" Width="200" SelectedIndex="0">
                    <ComboBoxItem>System Default</ComboBoxItem>
                    <ComboBoxItem>Light</ComboBoxItem>
                    <ComboBoxItem>Dark</ComboBoxItem>
                </ComboBox>
                <Rectangle/>
            </DockPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
