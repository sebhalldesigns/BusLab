<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Width="325" Height="450"
        CanResize="False"
        x:Class="BusLab.AboutWindow"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaTitleBarHeightHint="-1"
        SystemDecorations="Full"
        FontFamily="avares://BusLab/Assets/Fonts#Iosevka Regular"
        Title="About BusLab">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/> 
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#30808080" IsHitTestVisible="False">
            <TextBlock FontFamily="avares://BusLab/Assets/Fonts#Iosevka SemiBold" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0">
                About BusLab
            </TextBlock>
        </Grid>

        <DockPanel Grid.Row="2" Background="#30808080">
            <Button DockPanel.Dock="Right" CornerRadius="5" Margin="5 5" VerticalAlignment="Center" Padding="20 3.5" IsCancel="True" IsDefault="True" Click="ClosePressed">Close</Button>
            <Rectangle/>
        </DockPanel>

        <StackPanel Grid.Row="1">

            <Image Source="avares://BusLab/Assets/Icons/logo.png" Width="100" Height="100" Margin="0 10"/>

            <TextBlock FontFamily="avares://BusLab/Assets/Fonts#Iosevka SemiBold" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10 0">
                BusLab
            </TextBlock>

            <TextBlock FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5 0 0 10">
                Version 0.0 
            </TextBlock>

            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 5" TextWrapping="Wrap">
                Seb Hall, 2025, all rights reserved.
                <LineBreak/>
                <LineBreak/>
                BusLab is distributed under the MIT License, with source code available on GitHub.
                <LineBreak/>
                <LineBreak/>
                This program is provided with absolutely no warranty, and the author(s) accept no responsibility for any damages caused by its use.
            </TextBlock>
        
        </StackPanel>
        
    </Grid>

</Window>
