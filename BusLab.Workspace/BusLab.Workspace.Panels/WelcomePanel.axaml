<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BusLab.Workspace.Panels"
        mc:Ignorable="d"
        d:DesignWidth="500" d:DesignHeight="350"
        x:Class="BusLab.Workspace.Panels.WelcomePanel"
        x:DataType="local:WelcomePanel"
        FontFamily="avares://BusLab/Assets/Fonts#Iosevka Regular">
   
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="25">
            <Image Source="avares://BusLab/Assets/Icons/logo.png" Width="100" Height="100" Margin="0 10"/>

            <TextBlock FontFamily="avares://BusLab/Assets/Fonts#Iosevka SemiBold" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10 0">
                BusLab
            </TextBlock>

            <ScrollViewer BorderBrush="Transparent">
                <WrapPanel>

                    <Button Width="80" Height="100" CornerRadius="5" Padding="0" Margin="5" Click="NewFilePressed">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Bottom" Height="30" TextWrapping="Wrap" TextAlignment="Center" Margin="0" Padding="0">
                                New File
                            </TextBlock>
                            <Image Height="40" Margin="0 5 0 8" Source="avares://BusLab/Assets/Icons/icons8-add-file-48.png"/>
                        </DockPanel>
                    </Button>

                    <Button Width="80" Height="100" CornerRadius="5" Padding="0" Margin="5" Click="OpenFilePressed">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Bottom" Height="30" TextWrapping="Wrap" TextAlignment="Center" Margin="0" Padding="0">
                                Open File
                            </TextBlock>
                            <Image Height="40" Margin="0 5 0 8" Source="avares://BusLab/Assets/Icons/icons8-place-file-48.png"/>
                        </DockPanel>
                    </Button>

                    <Button Width="80" Height="100" CornerRadius="5" Padding="0" Margin="5" Click="OpenFolderPressed">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Bottom" Height="30" TextWrapping="Wrap" TextAlignment="Center" Margin="0" Padding="0">
                                Open Folder
                            </TextBlock>
                            <Image Height="40" Margin="0 5 0 8" Source="avares://BusLab/Assets/Icons/icons8-open-folder-48.png"/>
                        </DockPanel>
                    </Button>

                    <Button Width="80" Height="100" CornerRadius="5" Padding="0" Margin="5" Click="HelpPressed">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Bottom" Height="30" TextWrapping="Wrap" TextAlignment="Center" Margin="0" Padding="0">
                                Help
                            </TextBlock>
                            <Image Height="40" Margin="0 5 0 8" Source="avares://BusLab/Assets/Icons/icons8-help-48.png"/>
                        </DockPanel>
                    </Button>
                </WrapPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
